    &__title
      font-size: 36px
      margin-bottom: 50px
    &__wrapper
      margin-left: 15%
      margin-right: 15%

    &__item
      font-size: 30px
      .ico
        transform: scale(1.75)
      span
        margin-top: 35px

@media($desktop)
  .socials-contact
    padding: 40px 0 40px 0
    margin-bottom: 30px
    &__title
      font-size: 20px
      margin-bottom: 30px
    &__wrapper
      margin-left: 5%
      margin-right: 5%

    &__item
      font-size: 20px
      .ico
        transform: scale(1)
      span
        margin-top: 10px
