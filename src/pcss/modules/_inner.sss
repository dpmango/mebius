    padding-top: 150px
    padding-bottom: 80px
    &__wrapper
      margin-left: 10%
      margin-right: 10%
    &__block
      .ico
        transform: scale(1.25)
      &__action
        font-size: 30px
        margin-top: 30px
      &__coors
        margin-top: 15px
        font-size: 30px
      &__additional
        font-size: 24px
        margin-top: 10px

@media($mobile)
  .contact
    padding-top: 100px
    padding-bottom: 40px
    &__wrapper
      margin-left: 0
      margin-right: 0
    &__block
      .ico
        transform: scale(.8)
      &__action
        font-size: 20px
        margin-top: 10px
      &__coors
        margin-top: 10px
        font-size: 20px
      &__additional
        font-size: 16px
        margin-top: 5px

@media($mobile-s)
  .contact
    padding-top: 80px


.socials-contact
  background: #f5ebdc
  padding: 80px 0 75px 0
  &__wrapper
    display: flex
    justify-content: space-between
  &__title
    font-family: 'Neo-Light'
    font-size: 24px
    text-align: center
