  padding-top: 200px
  padding-bottom: 50px
  &__wrapper
    display: flex
    justify-content: space-around
  &__block
    text-align: center
    &__action
      font-family: 'Neo-Light'
      font-size: 24px
      color: #baa588
      margin-top: 20px
    &__coors
      font-size: 23px
      margin-top: 12px
      a
        display: block
        margin-top: 5px
        transition: all .4s ease
        &:hover
          color: $colorYellow
    &__additional
      font-size: 16px
      margin-top: 5px
